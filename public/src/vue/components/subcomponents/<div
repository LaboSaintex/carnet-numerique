                :readonly="read_only"
                @click="requestAccessToProject"
              >
                {{ $t("ask_to_be_added_to_authors") }}
              </button>
            </template>
          </template>

          <button
            v-if="
              !can_see_project &&
              project.password === 'has_pass' &&
              project.editing_limited_to !== 'only_authors'
