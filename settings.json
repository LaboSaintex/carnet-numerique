{
  "protocol": "https",
  "host": "localhost",
  "port": 8080,
  "userDirPath": "documents",
  "userDirname": "dodoc2",

  "contentDirname" : "user",
  "cacheDirname" : "cache",
  "metaFileext" : ".txt",
  "folderMetafilename" : "meta",

  "metaDateFormat" : "YYYYMMDD_HHmmss",
  "textEncoding" : "UTF-8",
  "deletedPrefix" : "x_",
  "thumbFolderName" : "_thumbs",
  "deletedFolderName" : "_bin",
  "authorsFolderName" : "_authors",

  "mediaThumbQuality" : 70,

  "_comment" : "// see http://regexr.com/3d4t8",
  "regexpMatchFolderNames" : "^([^.]+)$",
  "regexpGetFileExtension" : "\\.[^.]*$",
  "regexpRemoveFileExtension" : "(.+?)(\\.[^.]*$|$)",

  "structure" : {
    "folder": {
      "name": {
        "type": "string"
      },
      "date_created": {
        "type": "date",
        "default": "current",
        "read_only": true
      },
      "date_modified": {
        "type": "date",
        "default": "current"
      },
      "password": {
        "type": "string",
        "read_only": true        
      },
      "authors": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "preview": {
        "type": "string"
      }
    },
    "media": {
      "date_created": {
        "type": "date",
        "default": "current",
        "read_only": true
      },
      "date_modified" : {
        "type": "date",
        "default": "current",
        "override": true
      },
      "type": {
        "type": "string",
        "options": ["image", "video", "audio", "text", "marker", "other"],
        "default": "other"
      },
      "fav": {
        "type": "boolean",
        "default": false
      },
      "ratio" : {
        "type": "number"
      },
      "duration" : {
        "type": "number"
      },
      "authors": {
        "type": "string"
      },
      "keywords": {
        "type": "string"
      },
      "caption": {
        "type": "string"
      }
    }
  }
}