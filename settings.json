{
  "protocol": "https",
  "host": "localhost",
  "port": 8080,
  "userDirPath": "documents",
  "userDirname": "dodoc2",

  "contentDirname" : "user",
  "cacheDirname" : "cache",
  "metaFileext" : ".txt",
  "thumbExt" : ".jpeg",
  "thumbFormat": "jpeg",
  "folderMetaFilename" : "meta",
  "folderPreviewFilename" : "meta_preview",

  "metaDateFormat" : "YYYYMMDD_HHmmss",
  "textEncoding" : "UTF-8",
  "thumbFolderName" : "_thumbs",
  "deletedFolderName" : "_bin",

  "mediaThumbQuality" : 70,

  "_comment" : "// see http://regexr.com/3d4t8",
  "regexpMatchFolderNames" : "^([^.]+)$",
  "regexpGetFileExtension" : "\\.[^.]*$",
  "regexpRemoveFileExtension" : "(.+?)(\\.[^.]*$|$)",

  "structure" : {
    "projects": {
      "path": "",
      "fields": {
        "name": {
          "type": "string"
        },
        "date_created": {
          "type": "date",
          "default": "current",
          "read_only": true
        },
        "date_modified": {
          "type": "date",
          "default": "current"
        },
        "password": {
          "type": "string",
          "read_only": true        
        },
        "authors": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "preview": {
          "type": "string"
        }
      },
      "child_media": {
        "fields": {
          "date_created": {
            "type": "date",
            "default": "current",
            "read_only": true
          },
          "date_modified" : {
            "type": "date",
            "default": "current",
            "override": true
          },
          "date_uploaded" : {
            "type": "date",
            "default": "current",
            "read_only": true
          },
          "media_filename": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "options": ["image", "video", "audio", "text", "other"],
            "default": "other"
          },
          "fav": {
            "type": "boolean",
            "default": false
          },
          "ratio" : {
            "type": "number"
          },
          "duration" : {
            "type": "number"
          },
          "authors": {
            "type": "string"
          },
          "keywords": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          }  
        }
      },
        
    },
    "authors": {
      "path": "_authors",
      "fields": {
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "read_only": true        
        },
        "description": {
          "type": "string"
        },
        "preview": {
          "type": "string"
        },
        "nfc_tag": {
          "type": "string"
        }
      }
    },
    "publications": {
      "path": "_publications",
      "fields": {
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "read_only": true        
        },
        "date_created": {
          "type": "date",
          "default": "current",
          "read_only": true
        },
        "date_modified": {
          "type": "date",
          "default": "current"
        },
        "description": {
          "type": "string"
        },
        "preview": {
          "type": "string"
        },
        "template": {
          "type": "string",
          "options": ["journal"],
          "default": "journal"          
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "header_left": {
          "type": "string"
        },
        "header_right": {
          "type": "string"
        },
        "margin_left": {
          "type": "number"
        },
        "margin_right": {
          "type": "number"
        },
        "margin_top": {
          "type": "number"
        },
        "margin_bottom": {
          "type": "number"
        },
        "gridstep": {
          "type": "number"
        },
        "pages": {
          "type": "array"
        },
        "medias_list": {
          "type": "array"          
        }
      }
    },
    "publication_medias": {
      "fields": {
        "name": {
          "type": "string"
        },
        "date_modified": {
          "type": "date",
          "default": "current"
        },
        "page": {
          "type": "string"
        },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        }
      }
    } 
  }
}
