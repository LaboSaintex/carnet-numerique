mixin snippets(typeOfSnippet)

  if(typeOfSnippet === 'mediaForm')
    //////////////////////////////////////////////   MEDIA FORM (inside bigmedia)  //////////////////////////////////
    form(onsubmit='return false;' class='add-media-data lead')
      label
        | !{dodoc.lang().modal.informations}
      textarea.mediaContent--textOfTextmedia.js--mediaInformations(type='text')
    h3.txt-small_info.margin-top_bottom
      span(style='display:none;') !{dodoc.lang().modal.pathofmedia}
      .js--mediaFullPath(style='display:none;')
      a.js--downloadThisMedia(download)
        | !{dodoc.lang().modal.downloadThisMedia}
    hr
    +button('favButton', '', '')
    +button('deleteMediaBibli', '', '')
    +button('valider', '', 'isCollapsed')

  if(typeOfSnippet === 'mediaForm_txt')
    //////////////////////////////////////////////   MEDIA FORM TEXT  //////////////////////////////////

    form(onsubmit='return false;' class='add-media-text lead')
      textarea.mediaContent--textOfTextmedia.js--textField(placeholder="Ajouter du texte ici" required)
    h3.txt-small_info
      | !{dodoc.lang().modal.pathofmedia}
      .js--mediaFullPath
      a.js--downloadThisMedia(download)
    hr
    +button('favButton', '', '')
    +button('deleteMediaBibli', '', '')
    +button('valider', '', 'isCollapsed')


  if(typeOfSnippet === 'moduleInfos')
    .module_infos
      .module_infos-blocs
        -for(var prop in localNetworkInfos)
          -if(isHttps)
            p.txt-small_info
              | !{dodoc.lang().toconnectwithanotherdevice}
              a.js--openInBrowser(href="https://#{localNetworkInfos[prop]}:8080" target="_blank")
                | https://#{localNetworkInfos[prop]}:8080
          -else
            p.txt-small_info !{dodoc.lang().toconnectwithanotherdevice}
              a.js--openInBrowser(href="http://#{localNetworkInfos[prop]}:8080" target="_blank")
                | http://#{localNetworkInfos[prop]}:8080
      .module_infos-blocs
        p.txt-small_info
          | !{dodoc.lang().mediaPubliTemplatesAreStoredIn}<br>
          a.txt-wrap_long_lines.js--openThisPathInFinder(href="#{currentUserDirPath}") #{ currentUserDirPath.replace(/\//g, '\/\u200B') }
        p.txt-small_info
          a.moveDodocContentFolder.do--hide_on_clients.js--openModal_moveContentFolder
            | !{dodoc.lang().clickHereToMoveContentFolder}
      .module_infos-blocs
        p.txt-small_info
          | !{dodoc.lang().toSuggestFeatures}
          a.js--openInBrowser(href="https://github.com/l-atelier-des-chercheurs/dodoc/issues" target="_blank")
            | github.com/l-atelier-des-chercheurs/dodoc/issues
        p.txt-small_info
          - if(logToFile)
            input.js--enableLogToFile(type="checkbox" id="enableLogToFile" checked)
          - else
            input.js--enableLogToFile(type="checkbox" id="enableLogToFile")
          label.checkbox--enableLogToFile.do--hide_on_clients(for="enableLogToFile")
            | !{dodoc.lang().enableLogToFile}
      .module_infos-blocs
        p.txt-small_info
          a.js--openInBrowser(href="http://latelier-des-chercheurs.fr/" target="_blank")
            | !{dodoc.lang().creditADC}
